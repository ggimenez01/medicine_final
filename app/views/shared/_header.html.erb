<!-- app/views/shared/_header.html.erb -->

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "psalms.png", alt: "Logo", class: "logo-img" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link text-light" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link text-light" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class: "nav-link text-light" %>
        </li>
        <li class="nav-item">
          <%= link_to "Categories", categories_path, class: "nav-link text-light" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Best Selling Drugs', best_selling_path, class: "nav-link text-light" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Orders", orders_path, class: "nav-link text-light" %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, class: "nav-link text-light" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-light" %>
          </li>
        <% end %>
      </ul>

      <!-- View Cart and Item Count -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to 'View Cart', cart_path, class: "nav-link text-light" %>
          <% if session[:cart] && session[:cart].values.sum > 0 %>
            <span class="ml-2 text-light">(<%= session[:cart].values.sum %> items)</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>
