<%= render 'shared/breadcrumbs' %>

<% if products.present? %>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% products.each do |product| %>
          <tr>
            <td>
              <% if product.image.present? %>
                <%= image_tag product.image.url, alt: product.name, class: "img-thumbnail", style: "max-width: 100px; max-height: 100px;" %>
              <% else %>
                <p>Image Not Available</p>
              <% end %>
            </td>
            <td><%= link_to product.name, product_path(product) %></td>
            <td><%= number_to_currency(product.price) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p>No products found for <%= @category.capitalize %>.</p>
<% end %>
